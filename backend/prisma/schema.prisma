generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String
}

model MenuItem {
  id       Int     @id @default(autoincrement())
  name     String
  price    Float
  category String?
}

model Order {
  id        Int      @id @default(autoincrement())
  items     Json
  total     Int
  platform  String
  tableNo   String?   // optional
  token     String?   // ðŸ”§ ADD THIS LINE
  status    String
  createdAt DateTime @default(now())
  gstPercentage Int     @default(18) 
  gstAmount     Int      @default(0) 
}


